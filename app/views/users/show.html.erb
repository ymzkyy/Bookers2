


    <%= render 'books/book', users: @users, books: @books %>


      <div class="col-lg-6">
          <h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |user| %>

    <tr>
      <td><%= image_tag @user.get_profile_image %></td>
      <td><%= link_to user.title, book_path(current_user) %></td>
      <td><%= user.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>


</div>
</div>
</div>
</div>

