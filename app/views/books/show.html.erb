<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
<%= flash[:not] %>
<%= flash[:notice] %>
    <%= render 'books/book', book: @book, user: @user%>
</div>
<div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
<table class="table">
  <thead>
    <tr>
      <th><%= link_to user_path(@user.id) do %>
            <p><%= image_tag @user.get_profile_image %></p>
            <%= @user.name %>
          <% end %>
      </th>
      <th><%= link_to book_path(@user.id) do %>
        <%= @book.title %>
        <% end %>
      </th>
      <th><%= @book.body %></th>
      <% if @book.user == current_user %>
      <th><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></th>
      <th>
        
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
          </th>
        <% end %>
      
    </tr>
  </thead>

</table>


</div>
</div>
</div>
</div>
