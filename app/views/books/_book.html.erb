<div class = "main" >
<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">  
  <div class="row">
   <div class="col-lg-3">

<h2>User info</h2>
<% if current_user.image.attached? %>
      <%= image_tag current_user.image, size: "100x100" %>
    <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
    
    <p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
  </thead>
  <tbody>
      <td>introduction</td>
      <td><%= current_user.caption %></td>
  </tbody>
  </p>
</table>
  <div class = "edit">
<%= link_to edit_user_path(current_user) do %>
  <i class="fa-sharp fa-solid fa-user-gear"></i>
<% end %>
</div>
<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_field :body %>

  <p><%= f.submit 'Create Book', class: "btn btn-success" %></p>
<% end %>
</div>

